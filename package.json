{
  "name": "accounting-api",
  "version": "1.0.0",
  "description": "Bank-level secure REST API for universal accounting and financial operations",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "prebuild": "npm run clean",
    "build": "npm run build:prod",
    "build:dev": "npm run lint && npm run typecheck && tsc -p tsconfig.build.json",
    "build:prod": "npm run lint:prod && npm run typecheck:prod && tsc -p tsconfig.build.json && npm run build:optimize",
    "build:staging": "NODE_ENV=staging npm run build:prod",
    "build:optimize": "echo 'Build optimization completed'",
    "clean": "rimraf dist coverage .nyc_output",
    "start": "node dist/index.js",
    "start:dev": "npm run build:dev && npm run start",
    "start:prod": "NODE_ENV=production npm run start",
    "start:staging": "NODE_ENV=staging npm run start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test:coverage && npm run test:integration:coverage",
    "test:ci": "npm run test:coverage && npm run test:integration",
    "test:rbac:full": "ts-node tests/rbac/run-rbac-tests.ts full",
    "test:rbac:quick": "ts-node tests/rbac/run-rbac-tests.ts quick",
    "test:rbac:help": "ts-node tests/rbac/run-rbac-tests.ts help",
    "test:rbac:generate-data": "ts-node tests/rbac/test-data-generator.ts",
    "test:rbac:enhanced": "ts-node tests/rbac/enhanced-rbac-runner.ts test",
    "test:rbac:enhanced:endpoint": "ts-node tests/rbac/enhanced-rbac-runner.ts endpoint",
    "test:rbac:enhanced:workflow": "ts-node tests/rbac/enhanced-rbac-runner.ts workflow",
    "test:rbac:enhanced:boundary": "ts-node tests/rbac/enhanced-rbac-runner.ts boundary",
    "test:rbac:enhanced:help": "ts-node tests/rbac/enhanced-rbac-runner.ts help",
    "lint": "eslint . --ext .ts",
    "lint:prod": "eslint . --ext .ts --config .eslintrc.prod.json",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "typecheck:prod": "tsc --noEmit -p tsconfig.build.json",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "validate:full": "npm run lint && npm run typecheck && npm run test:all",
    "validate:prod": "npm run lint && npm run typecheck:prod",
    "deploy:staging": "npm run build:staging && docker-compose -f docker-compose.staging.yml up -d",
    "deploy:prod": "npm run build:prod && docker-compose -f docker-compose.production.yml up -d",
    "docs:generate": "ts-node scripts/generate-docs.ts",
    "docs:types": "openapi-typescript docs/openapi.yaml -o src/types/api.ts",
    "docs:serve": "redoc-cli serve docs/openapi.yaml --watch",
    "docs:serve-jsdoc": "redoc-cli serve docs/jsdoc-openapi.yaml --watch --port 8080",
    "docs:generate-jsdoc": "ts-node scripts/generate-jsdoc-spec.ts",
    "docs:build": "redoc-cli build docs/openapi.yaml --output docs/api-docs.html"
  },
  "keywords": [
    "accounting",
    "api",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Lifestream Dynamics",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/bcrypt": "^6.0.0",
    "@types/handlebars": "^4.0.40",
    "@types/multer": "^2.0.0",
    "@types/nodemailer": "^7.0.1",
    "@types/puppeteer": "^5.4.7",
    "axios": "^1.12.2",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "handlebars": "^4.7.8",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "mime-types": "^3.0.1",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.6",
    "puppeteer": "^21.11.0",
    "redis": "^4.6.11",
    "stripe": "^14.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/mime-types": "^3.0.1",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.2",
    "openapi-typescript": "^6.7.3",
    "prisma": "^5.7.0",
    "redoc-cli": "^0.13.21",
    "rimraf": "^6.0.1",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
