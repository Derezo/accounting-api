{
  "name": "accounting-api",
  "version": "1.0.0",
  "description": "Bank-level secure REST API for universal accounting and financial operations",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon --exec ts-node --transpile-only src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:integration": "jest --config jest.integration.config.js",
    "test:integration:watch": "jest --config jest.integration.config.js --watch",
    "test:integration:coverage": "jest --config jest.integration.config.js --coverage",
    "test:all": "npm run test:coverage && npm run test:integration:coverage",
    "test:ci": "npm run test:coverage && npm run test:integration",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node --transpile-only prisma/seed.ts",
    "validate": "npm run lint && npm run typecheck && npm run test",
    "validate:full": "npm run lint && npm run typecheck && npm run test:all",
    "docs:generate": "ts-node scripts/generate-docs.ts",
    "docs:types": "openapi-typescript docs/openapi.yaml -o src/types/api.ts",
    "docs:serve": "redoc-cli serve docs/openapi.yaml --watch",
    "docs:serve-jsdoc": "redoc-cli serve docs/jsdoc-openapi.yaml --watch --port 8080",
    "docs:generate-jsdoc": "ts-node scripts/generate-jsdoc-spec.ts",
    "docs:build": "redoc-cli build docs/openapi.yaml --output docs/api-docs.html"
  },
  "keywords": [
    "accounting",
    "api",
    "typescript",
    "prisma",
    "postgresql"
  ],
  "author": "Lifestream Dynamics",
  "license": "UNLICENSED",
  "dependencies": {
    "@prisma/client": "^5.7.0",
    "@types/bcrypt": "^6.0.0",
    "@types/nodemailer": "^7.0.1",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.0",
    "cors": "^2.8.5",
    "decimal.js": "^10.4.3",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "node-cache": "^5.1.2",
    "nodemailer": "^7.0.6",
    "redis": "^4.6.11",
    "stripe": "^14.10.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^4.10.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/morgan": "^1.9.9",
    "@types/node": "^20.10.5",
    "@types/supertest": "^6.0.2",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "jest-html-reporters": "^3.1.5",
    "jest-junit": "^16.0.0",
    "js-yaml": "^4.1.0",
    "nodemon": "^3.0.2",
    "openapi-typescript": "^6.7.3",
    "prisma": "^5.7.0",
    "redoc-cli": "^0.13.21",
    "supertest": "^6.3.3",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
