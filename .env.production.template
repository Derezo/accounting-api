# Production Environment Configuration Template
# Copy this file to .env.production and fill in secure values
# NEVER commit actual production secrets to version control

NODE_ENV=production
PORT=3000
API_VERSION=v1

# Database Configuration
# Use environment variables or secret management system in production
DATABASE_URL=postgresql://postgres:${POSTGRES_PASSWORD}@postgres-primary:5432/accounting_db?schema=public

# Redis Configuration
REDIS_URL=redis://:${REDIS_PASSWORD}@redis:6379

# JWT Configuration
# Generate secure random strings with at least 32 characters
JWT_SECRET=${JWT_SECRET}
JWT_REFRESH_SECRET=${JWT_REFRESH_SECRET}
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
# Generate secure random strings - critical for data protection
ENCRYPTION_KEY=${ENCRYPTION_KEY}
API_KEY_SALT=${API_KEY_SALT}

# Rate Limiting (Production values)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=warn

# Application Settings
DEFAULT_CURRENCY=CAD
DEFAULT_TAX_RATE=0.13
ALLOWED_ORIGINS=${ALLOWED_ORIGINS}

# Production Features
ENABLE_SWAGGER=false
ENABLE_DEBUG=false
ENABLE_HOT_RELOAD=false

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800

# Email Configuration
SMTP_HOST=${SMTP_HOST}
SMTP_PORT=${SMTP_PORT}
SMTP_USER=${SMTP_USER}
SMTP_PASS=${SMTP_PASS}
SMTP_FROM=${SMTP_FROM}

# Stripe Production Keys
STRIPE_SECRET_KEY=${STRIPE_SECRET_KEY}
STRIPE_WEBHOOK_SECRET=${STRIPE_WEBHOOK_SECRET}

# Production Database
SEED_DATABASE=false
CREATE_TEST_DATA=false

# Monitoring & Health Checks
HEALTH_CHECK_TIMEOUT=5000
ENABLE_METRICS=true
ENABLE_TRACING=true

# Security Headers
TRUST_PROXY=true
SECURE_COOKIES=true
COOKIE_DOMAIN=${COOKIE_DOMAIN}

# SSL/TLS
SSL_REDIRECT=true
HSTS_MAX_AGE=31536000

# Additional Production Security
SESSION_SECRET=${SESSION_SECRET}
CORS_CREDENTIALS=true
MAX_REQUEST_SIZE=10mb

