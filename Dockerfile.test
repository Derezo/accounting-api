FROM node:18-alpine

# Install dependencies for native modules
RUN apk add --no-cache \
    python3 \
    make \
    g++ \
    postgresql-client

# Create app directory
WORKDIR /app

# Copy package files
COPY package*.json ./
COPY tsconfig.json ./
COPY jest.config.js ./
COPY jest.integration.config.js ./

# Install dependencies
RUN npm ci --only=production=false

# Copy source code
COPY . .

# Generate Prisma client
RUN npx prisma generate

# Create test directories
RUN mkdir -p test-results/integration coverage/integration performance-results security-results

# Set permissions
RUN chmod +x /app

# Expose port for test server
EXPOSE 3001

# Default command (can be overridden)
CMD ["npm", "run", "test:integration"]