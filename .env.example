# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1
FRONTEND_URL=https://account.lifestreamdynamics.com

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/accounting_db?schema=public"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/accounting_shadow?schema=public"

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_SALT=your-api-key-salt

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (Resend API for notifications)
RESEND_API_KEY=re_...
EMAIL_FROM=Lifestream Dynamics <noreply@lifestreamdynamics.com>
ORGANIZATION_EMAIL=info@lifestreamdynamics.com
ORGANIZATION_PHONE=+1-800-555-0123

# Google OAuth 2.0 & Calendar Integration
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/api/v1/auth/google/callback
# Note: GOOGLE_REFRESH_TOKEN is deprecated - tokens now stored per-user in database

# Twilio SMS Integration
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+15551234567
TWILIO_SMS_ENABLED=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Testing
# E2E Testing Mode - ONLY for automated testing (NEVER in production)
# When enabled: Relaxes rate limits for localhost (127.0.0.1, ::1)
# - Login attempts: 5 â†’ 1000 per 15 minutes
# - Rate limiting skipped for localhost
# Production Safety: Server refuses to start if NODE_ENV=production and E2E_TESTING=true
# E2E_TESTING=false

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Storage (S3-compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=accounting-documents
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Application Settings
DEFAULT_CURRENCY=CAD
DEFAULT_TAX_RATE=0.13
DEPOSIT_PERCENTAGE=0.25
PAYMENT_TERMS_DAYS=15
QUOTE_VALIDITY_DAYS=30

# E-Transfer Email Monitoring Configuration
ETRANSFER_EMAIL_USER=transfers@yourcompany.com
ETRANSFER_EMAIL_PASSWORD=your_email_app_password
ETRANSFER_EMAIL_HOST=imap.gmail.com
ETRANSFER_EMAIL_PORT=993
ETRANSFER_ORGANIZATION_ID=your_default_org_id

# SMS Reminder Configuration
SMS_REMINDER_24H_ENABLED=true
SMS_REMINDER_1H_ENABLED=true
SMS_DAILY_LIMIT_PER_CUSTOMER=3
