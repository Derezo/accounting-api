# Application
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/accounting_db?schema=public"
SHADOW_DATABASE_URL="postgresql://user:password@localhost:5432/accounting_shadow?schema=public"

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Security
JWT_SECRET=your-super-secure-jwt-secret-key-here
JWT_REFRESH_SECRET=your-super-secure-refresh-secret-key-here
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d
ENCRYPTION_KEY=your-32-character-encryption-key
API_KEY_SALT=your-api-key-salt

# Stripe
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...

# Email (for e-transfer notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@lifestreamdynamics.com

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Storage (S3-compatible)
S3_ENDPOINT=https://s3.amazonaws.com
S3_REGION=us-east-1
S3_BUCKET=accounting-documents
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# Application Settings
DEFAULT_CURRENCY=CAD
DEFAULT_TAX_RATE=0.13
DEPOSIT_PERCENTAGE=0.25
PAYMENT_TERMS_DAYS=15
QUOTE_VALIDITY_DAYS=30