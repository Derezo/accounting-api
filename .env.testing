# Test Environment Configuration
NODE_ENV=test
DATABASE_URL=file:./test.db

# JWT Configuration
JWT_SECRET=test-jwt-secret-key-for-testing-32-chars
JWT_REFRESH_SECRET=test-jwt-refresh-secret-key-for-testing-32-chars
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption
ENCRYPTION_KEY=test-encryption-key-32-characters
API_KEY_SALT=test-api-key-salt-for-testing

# API Configuration
API_VERSION=v1
PORT=3001

# Rate Limiting (more permissive for tests)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Disable external services in tests
STRIPE_SECRET_KEY=sk_test_dummy_key_for_testing
STRIPE_WEBHOOK_SECRET=whsec_test_dummy_secret
EMAIL_PROVIDER=test

# Logging
LOG_LEVEL=error