# Development Environment Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
# Using SQLite for local development (matches prisma/schema.prisma)
DATABASE_URL="file:./dev.db"
SHADOW_DATABASE_URL="file:./shadow.db"
# For PostgreSQL in Docker: postgresql://postgres:postgres_password@localhost:5432/accounting_db?schema=public

# Redis Configuration
REDIS_URL=redis://:redis_password@localhost:6379

# JWT Configuration
JWT_SECRET=dev-jwt-secret-change-in-production-minimum-32-characters
JWT_REFRESH_SECRET=dev-refresh-secret-change-in-production-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration
ENCRYPTION_KEY=dev-encryption-key-32-chars-long
API_KEY_SALT=dev-api-key-salt-minimum-16-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Logging
LOG_LEVEL=debug

# Application Settings
DEFAULT_CURRENCY=CAD
DEFAULT_TAX_RATE=0.13
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:8080

# Development Features
ENABLE_SWAGGER=true
ENABLE_DEBUG=true
ENABLE_HOT_RELOAD=true

# File Upload
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=52428800

# Email Configuration (Development)
SMTP_HOST=localhost
SMTP_PORT=1025
SMTP_USER=dev
SMTP_PASS=dev
SMTP_FROM=noreply@accounting-api.dev

# Stripe (Test Keys)
STRIPE_SECRET_KEY=sk_test_your_test_key_here
STRIPE_WEBHOOK_SECRET=whsec_test_webhook_secret_here

# Development Database Seeds
SEED_DATABASE=true
CREATE_TEST_DATA=true