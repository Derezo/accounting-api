# Staging Environment Configuration
NODE_ENV=staging
PORT=3000
API_VERSION=v1

# Database Configuration
DATABASE_URL=postgresql://postgres:staging_password@postgres:5432/accounting_staging?schema=public

# Redis Configuration
REDIS_URL=redis://:staging_redis@redis:6379

# JWT Configuration (Use secure random values in real staging)
JWT_SECRET=staging-jwt-secret-change-to-secure-random-string-minimum-32-characters
JWT_REFRESH_SECRET=staging-refresh-secret-change-to-secure-random-string-minimum-32-characters
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration (Use secure random values in real staging)
ENCRYPTION_KEY=staging-encryption-key-32-chars-min
API_KEY_SALT=staging-api-key-salt-16-chars

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200

# Logging
LOG_LEVEL=info

# Application Settings
DEFAULT_CURRENCY=CAD
DEFAULT_TAX_RATE=0.13
ALLOWED_ORIGINS=https://staging.yourdomain.com,https://app-staging.yourdomain.com

# Staging Features
ENABLE_SWAGGER=true
ENABLE_DEBUG=false
ENABLE_HOT_RELOAD=false

# File Upload
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=52428800

# Email Configuration (Staging)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=587
SMTP_USER=staging_smtp_user
SMTP_PASS=staging_smtp_pass
SMTP_FROM=noreply@staging.yourdomain.com

# Stripe (Test Keys for staging)
STRIPE_SECRET_KEY=sk_test_staging_key_here
STRIPE_WEBHOOK_SECRET=whsec_staging_webhook_secret_here

# Staging Database
SEED_DATABASE=false
CREATE_TEST_DATA=true

# Monitoring & Health Checks
HEALTH_CHECK_TIMEOUT=10000
ENABLE_METRICS=true
ENABLE_TRACING=true